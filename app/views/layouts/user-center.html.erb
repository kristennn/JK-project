<!DOCTYPE html>
<html>
  <head>
    <title>JK-Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="content">
    <div class="container-fluid">
      <%= render "common/navbar" %>
     <div class="container">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <span>
            <div class="col-md-2 user-photo">
          <% if current_user.avatar.present? %>
            <%= image_tag(current_user.avatar.thumb.url,style:"border-radius:60%;width:60px;height:60px;",class:"thumbnail")  %>
              <!-- 用户的自选头像 -->
          <% else %>
            <%= image_tag("http://ww1.sinaimg.cn/large/006tNbRwgy1ffzxufbo0lj3069069t8o.jpg",class:"thumbnail",style:"width:60px;height:60px;border-radius:50%;") %>
            <!-- 定义用户未选择头像时的默认头像 -->
          <% end %>
          </div>
          <div class="text-left user-center-1">
          个人中心
          </div>
        </span>
        </div>
        <div class="panel-body">
            <div class="col-md-2 usercenter-style">
              <ul class="nav nav-pills1 nav-stacked" style="max-width: 300px;">
                <li class="btn">
                  <i class="fa fa-cog" aria-hidden="true">&nbsp &nbsp<%= link_to "个人资料", edit_account_user_path(current_user), class: 'user-set' %></i>
                </li>
                <li class="btn">
                  <i class="fa fa-star" aria-hidden="true">&nbsp &nbsp<%= link_to("我的收藏", collects_path, class: 'user-set' )%></i>
                </li>
                <li class="btn">
                  <i class="fa fa-file-text" aria-hidden="true">&nbsp &nbsp<%= link_to("我的发布", account_posts_path, class: 'user-set')%></i>
                </li>
              </ul>
            </div>
            <div class="col-md-8">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
  <%= render "common/footer" %>
  </body>
</html>
