<div class="container">
  <div class="col-md-12">
    <h2 class="text-center">所有的评论</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>编号</th>
          <th>评论内容</th>
          <th>评论者</th>
          <th>操作选项</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td><%= comment.note %></td>
            <td><%= comment.user.email %></td>
            <td>
              <%= link_to("删除评论", admin_comment_path(comment), method: :delete, data: { confirm: "你确定要删除这条评论吗？"}, class: "btn btn-xs btn-danger") %>
              <% if comment.is_hidden? %>
                <%= link_to("公开评论", public_admin_comment_path(comment), method: :post, class: "btn btn-xs btn-default") %>
              <% else %>
                <%= link_to("隐藏评论", hide_admin_comment_path(comment), method: :post, class: "btn btn-xs btn-default") %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
